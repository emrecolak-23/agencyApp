<%- include("partials/_header")  -%> 
       
        <%- include("partials/_navigation")  -%> 

        <%- include("partials/_slider") -%> 
        
        <!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Portfolio</h2>
                <h3 class="section-subheading text-muted">You can find my projects</h3>
            </div>
            <div class="row">
            
               <% for(let i=0;i<projects.length; i++) { %> 
                <div class="col-lg-4 col-sm-6 mb-4">
                    <!-- Portfolio item 1-->
                    <div class="portfolio-item">
                        <a class="portfolio-link text-center" data-bs-toggle="modal" href="#portfolioModal1<%= projects[i]._id  %>">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src="<%= projects[i].image  %>" alt="..." />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading"><%= projects[i].name %> </div>
                            <div class="portfolio-caption-subheading text-muted"><%= projects[i].category.name  %> </div>
                        </div>
                    </div>
                </div>
                 <!-- Portfolio Modals-->
              <!-- Portfolio item 1 modal popup-->
              <div class="portfolio-modal modal fade" id="portfolioModal1<%= projects[i]._id  %>" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" /></div>
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <div class="modal-body">
                                        <!-- Project details-->
                                        <h2 class="text-uppercase"><%= projects[i].name  %> </h2>
                                        <p class="item-intro text-muted"> </p>
                                        <img class="img-fluid d-block mx-auto" src="<%= projects[i].image %>" alt="..." />
                                        <p><%= projects[i].description  %> </p>
                                        <ul class="list-inline">
                                          <!--  <li>
                                                <strong>Client:</strong>
                                                 
                                            </li> -->
                                            <li>
                                                <strong>Category:</strong>
                                                <%= projects[i].category.name  %> 
                                            </li>
                                            <li>
                                                <strong>Link:</strong>
                                                <a href="<%= projects[i].link  %>"><%= projects[i].link  %></a> 
                                            </li>
                                            <li class="mt-3">
                                                <a class="btn btn-success btn-sm text-uppercase" href="/project/edit/<%= projects[i].slug  %>">Update</a>
                                                <a class="btn btn-danger btn-sm text-uppercase" href="/project/<%= projects[i]._id%>?_method=DELETE"
                                                    onclick="return confirm('Are you sure?')"
                                                    >Delete</a>
                                            </li>
                                        </ul>

                                        <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                            <i class="fas fa-xmark me-1"></i>
                                            Close Project
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             <% } %>    
            </div>
            <div class="container">
                <div class="row">
                    <nav aria-label="...">
                        <% if(pages>0) { %> 
                        <ul class="pagination pagination-lg">
                          <% for(let i=1;i<=pages;i++) { %> 
                            <% if(i==current) { %>
                             <li class="page-item active">
                                 <a class="page-link" href="/?page=<%= i %>"><%= i %></a> 
                             </li>   
                            <% } else if (i < pages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/?page=<%= i %>"><%= i %></a> 
                                </li> 
                            <% } else {%>
                                <li class="page-item">
                                    <a class="page-link" href="/?page=<%= i %>">></a>
                                  </li>
                            <% } %> 
                          <% } %> 
                        </ul>
                        <% } %> 
                      </nav>    
                </div>
            </div>
        </div>
      </section>

       <!-- Clients-->
<div class="py-5">
    <div class="container">
        <div class="row align-items-center">
            <% for(let i=0; i<clients.length;i++) { %> 
            <div class="col-md-3 col-sm-6 my-3">
                <a href="#!"><img class="img-fluid img-brand d-block mx-auto" src="<%= clients[i].image  %>" alt="..." aria-label="Microsoft Logo" /></a>
            </div>
            <% } %> 
        </div>
    </div>
  </div>
        
 <%- include("partials/_footer") -%> 